<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="workflow" id="workflow_course">
            <field name="name">workflow.training.course</field>
            <field name="osv">training.course</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="activity_course_draft">
            <field name="wkf_id" ref="workflow_course" />
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">write({'state_course':'draft'})</field>
            <field name="flow_start">True</field>
        </record>

        <record model="workflow.activity" id="activity_course_pending">
            <field name="wkf_id" ref="workflow_course" />
            <field name="name">pending</field>
            <field name="kind">function</field>
            <field name="action">write({'state_course':'pending'})</field>
        </record>

        <record model="workflow.activity" id="activity_course_inprogress">
            <field name="wkf_id" ref="workflow_course" />
            <field name="name">inprogress</field>
            <field name="kind">function</field>
            <field name="action">write({'state_course':'inprogress'})</field>
        </record>

        <record model="workflow.activity" id="activity_course_deprecated">
            <field name="wkf_id" ref="workflow_course" />
            <field name="name">deprecated</field>
            <field name="kind">function</field>
            <field name="action">write({'state_course':'deprecated'})</field>
            <field name="flow_stop">True</field>
        </record>

        <record model="workflow.activity" id="activity_course_validate">
            <field name="wkf_id" ref="workflow_course" />
            <field name="name">validate</field>
            <field name="kind">function</field>
            <field name="action">write({'state_course':'validate'})</field>
            <field name="flow_stop">True</field>
        </record>


        <record model="workflow.transition" id="transition_course_pending">
            <field name="act_from" ref="activity_course_draft" />
            <field name="act_to" ref="activity_course_pending" />
            <field name="signal">signal_pending</field>
        </record>

        <record model="workflow.transition" id="transition_course_inprogress">
            <field name="act_from" ref="activity_course_pending" />
            <field name="act_to" ref="activity_course_inprogress" />
            <field name="signal">signal_inprogress</field>
        </record>

        <record model="workflow.transition" id="transition_course_deprecated">
            <field name="act_from" ref="activity_course_inprogress" />
            <field name="act_to" ref="activity_course_deprecated" />
            <field name="signal">signal_deprecated</field>
        </record>

        <record model="workflow.transition" id="transition_course_validate">
            <field name="act_from" ref="activity_course_inprogress" />
            <field name="act_to" ref="activity_course_validate" />
            <field name="signal">signal_validate</field>
        </record>
    </data>
</openerp>
