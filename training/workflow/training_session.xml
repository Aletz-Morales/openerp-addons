<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="workflow" id="workflow_session">
            <field name="name">workflow.training.session</field>
            <field name="osv">training.session</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="activity_session_draft">
            <field name="wkf_id" ref="workflow_session" />
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
            <field name="flow_start">True</field>
        </record>

        <record model="workflow.activity" id="activity_session_open_pending">
            <field name="wkf_id" ref="workflow_session" />
            <field name="name">open_pending</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'open_pending'})</field>
        </record>

        <record model="workflow.activity" id="activity_session_inprogress">
            <field name="wkf_id" ref="workflow_session" />
            <field name="name">inprogress</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'inprogress'})</field>
        </record>

        <record model="workflow.activity" id="activity_session_validate">
            <field name="wkf_id" ref="workflow_session" />
            <field name="name">validate</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'validate'})</field>
            <field name="flow_stop">True</field>
        </record>

        <record model="workflow.activity" id="activity_session_closed">
            <field name="wkf_id" ref="workflow_session" />
            <field name="name">closed</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'closed'})</field>
            <field name="flow_stop">True</field>
        </record>

        <record model="workflow.activity" id="activity_session_cancel">
            <field name="wkf_id" ref="workflow_session" />
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'cancel'})</field>
            <field name="flow_stop">True</field>
        </record>

        <record model="workflow.transition" id="transition_session_draft">
            <field name="act_from" ref="activity_session_draft" />
            <field name="act_to" ref="activity_session_open_pending" />
            <field name="signal">signal_inprogress</field>
        </record>

        <record model="workflow.transition" id="transition_session_inprogress">
            <field name="act_from" ref="activity_session_open_pending" />
            <field name="act_to" ref="activity_session_inprogress" />
            <field name="signal">signal_inprogress</field>
        </record>

        <record model="workflow.transition" id="transition_session_validate">
            <field name="act_from" ref="activity_session_inprogress" />
            <field name="act_to" ref="activity_session_validate" />
            <field name="signal">signal_validate</field>
        </record>

        <record model="workflow.transition" id="transition_session_closed">
            <field name="act_from" ref="activity_session_inprogress" />
            <field name="act_to" ref="activity_session_closed" />
            <field name="signal">signal_closed</field>
        </record>

        <record model="workflow.transition" id="transition_session_cancel">
            <field name="act_from" ref="activity_session_inprogress" />
            <field name="act_to" ref="activity_session_cancel" />
            <field name="signal">signal_cancel</field>
        </record>
    </data>
</openerp>



