        <record model="ir.ui.view" id="training_course_form">
            <field name="name">training.course.form</field>
            <field name="model">training.course</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Course">
                    <group colspan="4" col='6'>
                        <field name="name" string="Designation" select="1" />
                        <field name="parent_id" string="Category/Course" required="True" />
                        <field name="course_type_id" />
                        <field name="display_name" />
                        <field name="code" string="Code" select="1" />
                        <field name="total_duration" />
                        <field name="lang_id" />
                        <field name="target_public" />
                        <field name="reference_id" />
                        <field name="duration" />
                    </group>
                    <notebook colspan="4">
                        <page string="Offers">
                            <field name="offer_ids" widget="one2many" nolabel="1" mode="form">
                                <form string="Offers">
                                    <field name="name" />
                                    <newline />
                                    <separator string="Objective" colspan="4" />
                                    <field name="objective" colspan="4" nolabel="1" />
                                    <separator string="Content Course" colspan="4" />
                                    <field name="description" colspan="4" nolabel="1" />
                                </form>
                            </field>
                        </page>
                        <page string="Sub Courses">
                            <field name="children" nolabel="1" colspan="4">
                                <tree string="Sub Courses">
                                    <field name="sequence" />
                                    <field name="name" string="Designation" />
                                    <field name="duration" />
                                </tree>
                            </field>
                        </page>
                        <page string="Professors">
                            <field name="instructor_ids" nolabel="1" colspan="4"/>
                        </page>
                        <page string="Note">
                            <field name="internal_note" nolabel="1" colspan="4" />
                        </page>
                        <page string="Certifications">
                            <label string="TODO" />
                        </page>
                    </notebook>
                    <group>
                        <field name="state" nolabel="1" required="True" />
                        <button string="Draft" type="object" />
                        <button string="Confirm" type="object" />
                        <button string="Cancel" type="object" />
                    </group>
                </form>
            </field>
        </record>

