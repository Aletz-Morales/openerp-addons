<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="workflow" id="workflow_planned_exam">
            <field name="name">workflow.training.planned_exam</field>
            <field name="osv">training.planned_exam</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="activity_planned_exam_draft">
            <field name="wkf_id" ref="workflow_planned_exam" />
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
            <field name="flow_start">True</field>
        </record>

        <record model="workflow.activity" id="activity_planned_exam_open_pending">
            <field name="wkf_id" ref="workflow_planned_exam" />
            <field name="name">open_pending</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'open_pending'})</field>
        </record>

        <record model="workflow.activity" id="activity_planned_exam_inprogress">
            <field name="wkf_id" ref="workflow_planned_exam" />
            <field name="name">inprogress</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'inprogress'})</field>
        </record>

        <record model="workflow.activity" id="activity_planned_exam_validated">
            <field name="wkf_id" ref="workflow_planned_exam" />
            <field name="name">validated</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'validated'})</field>
            <field name="flow_stop">True</field>
        </record>

        <record model="workflow.activity" id="activity_planned_exam_closed">
            <field name="wkf_id" ref="workflow_planned_exam" />
            <field name="name">closed</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'closed'})</field>
            <field name="flow_stop">True</field>
        </record>

        <record model="workflow.activity" id="activity_planned_exam_cancel">
            <field name="wkf_id" ref="workflow_planned_exam" />
            <field name="name">cancelled</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'cancelled'})</field>
            <field name="flow_stop">True</field>
        </record>

        <record model="workflow.transition" id="transition_planned_exam_draft">
            <field name="act_from" ref="activity_planned_exam_draft" />
            <field name="act_to" ref="activity_planned_exam_open_pending" />
            <field name="signal">signal_open_pending</field>
        </record>

        <record model="workflow.transition" id="transition_planned_exam_inprogress">
            <field name="act_from" ref="activity_planned_exam_open_pending" />
            <field name="act_to" ref="activity_planned_exam_inprogress" />
            <field name="signal">signal_inprogress</field>
        </record>

        <record model="workflow.transition" id="transition_planned_exam_validate">
            <field name="act_from" ref="activity_planned_exam_inprogress" />
            <field name="act_to" ref="activity_planned_exam_validated" />
            <field name="signal">signal_validate</field>
        </record>

        <record model="workflow.transition" id="transition_planned_exam_closed">
            <field name="act_from" ref="activity_planned_exam_inprogress" />
            <field name="act_to" ref="activity_planned_exam_closed" />
            <field name="signal">signal_close</field>
        </record>

        <record model="workflow.transition" id="transition_planned_exam_cancel">
            <field name="act_from" ref="activity_planned_exam_inprogress" />
            <field name="act_to" ref="activity_planned_exam_cancel" />
            <field name="signal">signal_cancel</field>
        </record>
    </data>
</openerp>




