<?xml version="1.0"?>
<terp>
<data>
	<menuitem name="Sales Management" icon="terp-sale" id="menu_sale_root"/>
<!--
	=======================
	Saleagent Information
	=======================
	-->
	<record model="ir.ui.view" id="view_saleagent_tree">
		<field name="name">saleagent.info.tree</field>
		<field name="model">sale.agent</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Saleagent">

                                <field name="name"/>  
       			        <field name="partner_id"/>
			        <field name="comprice_id"/>					                                
			
			</tree>
		</field>
	</record>
	<record model="ir.ui.view" id="view_saleagent_form">
		<field name="name">saleagent.info.form</field>
		<field name="model">sale.agent</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Saleagent">
			<notebook>
				<page string="Basic Info">
                                        <separator string="General Information" colspan="4"/>
                                          
        				    <field name="name" select="1"/>
        				    <field name="partner_id"/>
        				    <field name="comprice_id"/>					
					<!--field name="address" mode="form,tree" colspan="4" nolabel="1" select="1">
						<form string="Student Contacts">
							<field name="addone" select="1"/>
							<field name="addtwo" />
							<field name="zip"/>
							<field name="mob"select="1">							
						</form>
					</field>

					<field name="compname" colspan="4" select="1" /-->
		
				</page>
			</notebook>
			</form>
		</field>
	</record>

	
	<record model="ir.actions.act_window" id="action_saleagent_form">
		<field name="name">saleagent.info.form</field>  
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">sale.agent</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="view_saleagent_form"/>	
		
	</record>
	<menuitem name="Sales Management/Commissions" groups="admin" sequence="1"/>
	<menuitem name="Sales Management/Commissions/Sales agent"  id="saleagent_id_new" action="action_saleagent_form"/>
	
</data>
</terp>
